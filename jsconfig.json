{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "checkJs": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "server.js"]
}
